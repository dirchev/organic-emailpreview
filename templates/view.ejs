<html>
  <head>
    <title>Organic Email Preview</title>
    <link type="text/css" rel="stylesheet" href="/foundation/css/foundation.css" />
  </head>
  <body>
    <div class="row">
      <div class="small-12 columns text-center">
          <h1>Organic Email Preview</h1>
      </div>
    </div>
    <% if (emails.length === 0) { %>
      <div class="row">
        <div class="alert-box radius text-center" data-alert>
          <strong>Organic Email Preview</strong> is working, but there are no emails :/
        </div>
      </div>
    <% } else { %>
      <div class="row">
        <div class="alert-box radius text-center" data-alert>
          <strong>Organic Email Preview</strong> is working and there are <%= emails.length %> email(s):
        </div>
      </div>
    <% } %>
    <% for(var i = 0; i < emails.length; i++) {%>
      <div class="row">
        <div class="small-4 columns">
          <ul class="pricing-table">
            <li class="title"><%= emails[i].subject %></li>
            <li class="description">To <strong><%= emails[i].to%></strong></li>
            <li class="description">From <strong><%= emails[i].from%></strong></li>
          </ul>
        </div>
        <div class="small-8 columns">
          <iframe src="/email/<%= i %>" style="width: 100%; height: 600px; overflow: hidden;"></iframe>
        </div>
      </div>
      <hr />
    <% } %>
  </body>
</html>
