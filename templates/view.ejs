<html>
  <head>
    <title>Organic Email Preview</title>
    <link type="text/css" rel="stylesheet" href="/bootstrap.min.css" />
  </head>
  <body>
    <div class="container-fluid">
      <div class="jumbotron text-center">
          <h1>Organic Email Preview</h1>
          <p>Showing <%= emails.length %> email(s).</p>
      </div>
      <% for(var i = 0; i < emails.length; i++) {%>
        <div class="row">
          <div class="col-sm-4">
            <div class="panel panel-primary">
              <div class="panel-heading text-center"><%= emails[i].subject %></div>
              <div class="panel-body">
                <div>To <strong><%= emails[i].to%></strong></div>
                <div>From <strong><%= emails[i].from%></strong></div>
                <div>
                  <div><pre>email.data = <%= emails[i].jsonPresentation %></pre></div>
                </div>
              </div>
              <div class="list-group">
                <a class="list-group-item text-right" href="/email/<%= i %>" target="_blank">View in new tab</a>
              </div>
            </div>
          </div>
          <div class="col-sm-8">
            <iframe src="/email/<%= i %>" style="width: 100%; height: 600px; overflow: hidden;"></iframe>
          </div>
        </div>
        <hr />
      <% } %>
    </div>
  </body>
</html>
